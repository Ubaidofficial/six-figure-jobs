{
  "name": "job-board-scraper",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:staging": "dotenv -e .env.staging.local -- next dev -p 3001",
    "dev:prod": "dotenv -e .env.production.local -- next dev -p 3000",
    "build": "npx prisma generate && next build --webpack",
    "start": "next start -p 3000",
    "lint": "eslint .",
    "db:push:staging": "dotenv -e .env.staging.local -- npx prisma db push",
    "db:migrate:staging": "dotenv -e .env.staging.local -- npx prisma migrate dev",
    "db:studio:staging": "dotenv -e .env.staging.local -- npx prisma studio",
    "jobs:audit:currency": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' scripts/repairCurrencyAndSalary.ts --mode=audit --dry-run",
    "jobs:repair:currency": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' scripts/repairCurrencyAndSalary.ts --mode=repair",
    "jobs:annotate:ai": "tsx scripts/aiAnnotateJobs.ts",
    "jobs:backfill:salary": "tsx scripts/backfill-high-salary-local.ts",
    "jobs:backfill:salary-quality:v2.9": "tsx scripts/backfill-salary-quality-v2.9.ts",
    "audit:ci": "tsx scripts/audit-v2.9.ts",
    "scraper:smoke": "tsx scripts/smokeScrapers.ts",
    "scraper:ats:report": "tsx scripts/reportAtsCoverage.ts",
    "publish:pseo-batch": "tsx scripts/publish-pseo-batch.ts",
    "dashboard:pseo": "tsx scripts/monitoring-dashboard.ts",
    "generate:sitemap": "tsx scripts/generate-sitemap.ts",
    "test": "jest"
  },
  "dependencies": {
    "@prisma/client": "^5.16.1",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-toast": "^1.2.15",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.561.0",
    "next": "^16.0.4",
    "next-themes": "^0.4.6",
    "openai": "^6.14.0",
    "puppeteer": "^24.31.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "slugify": "^1.6.6",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/puppeteer": "^5.4.7",
    "@types/react": "19.2.6",
    "autoprefixer": "^10.4.23",
    "baseline-browser-mapping": "^2.9.7",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.0.10",
    "jest": "^30.2.0",
    "postcss": "^8.5.6",
    "prisma": "^5.16.1",
    "tailwindcss": "^3.4.18",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.14"
  }
}
