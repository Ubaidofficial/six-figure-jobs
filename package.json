{
  "name": "job-board-scraper",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:staging": "dotenv -e .env.staging.local -- next dev -p 3001",
    "dev:prod": "dotenv -e .env.production.local -- next dev -p 3000",

    "build": "npx prisma generate && next build",
    "start": "next start -p 3000",
    "lint": "next lint",

    "db:push:staging": "dotenv -e .env.staging.local -- npx prisma db push",
    "db:migrate:staging": "dotenv -e .env.staging.local -- npx prisma migrate dev",
    "db:studio:staging": "dotenv -e .env.staging.local -- npx prisma studio",

    "jobs:audit:currency": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' scripts/repairCurrencyAndSalary.ts --mode=audit --dry-run",
    "jobs:repair:currency": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' scripts/repairCurrencyAndSalary.ts --mode=repair",
    "jobs:annotate:ai": "tsx scripts/aiAnnotateJobs.ts",
    "scraper:smoke": "tsx scripts/smokeScrapers.ts",
    "scraper:ats:report": "tsx scripts/reportAtsCoverage.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.16.1",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "next": "^16.0.4",
    "puppeteer": "^24.31.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "slugify": "^1.6.6",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/puppeteer": "^5.4.7",
    "@types/react": "19.2.6",
    "autoprefixer": "^10.4.22",
    "dotenv-cli": "^11.0.0",
    "postcss": "^8.5.6",
    "prisma": "^5.16.1",
    "tailwindcss": "^3.4.18",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  }
}
