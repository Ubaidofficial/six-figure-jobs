// prisma/schema.prisma
// UPDATED: Configured for Vercel Postgres (Neon)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // Uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // Uses direct connection
}

model Job {
  id        String  @id
  title       String
  company     String
  companyLogo String?

  // Location / remote
  locationRaw  String?
  city         String?
  citySlug     String?
  countryCode  String?
  remote       Boolean?
  remoteRegion String?
  remoteMode   String? // "remote" | "hybrid" | "onsite"

  // Original scraped salary text
  salaryRaw String?

  // Full HTML job description
  descriptionHtml String?

  // Parsed salary (original values from source)
  salaryMin      BigInt?
  salaryMax      BigInt?
  salaryCurrency String?
  salaryPeriod   String?

  // Normalized annual in LOCAL currency (not converted)
  minAnnual BigInt?
  maxAnnual BigInt?
  currency  String? // "USD" | "EUR" | "GBP" | "AUD" | "CAD"

  // Flag for high-salary jobs (meets local threshold)
  isHighSalary    Boolean @default(false)
  isHundredKLocal Boolean @default(false)

  // Job meta
  type     String?
  source   String
  applyUrl String?
  url      String?
  roleSlug String?

  // Additional JSON meta
  skillsJson       String?
  requirementsJson String?
  benefitsJson     String?

  // ATS-specific
  externalId String?
  isExpired  Boolean   @default(false)
  lastSeenAt DateTime?
  postedAt   DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  // Relations
  companyId   String?
  companyRef  Company?       @relation(fields: [companyId], references: [id])
  locationId  String?
  locationRef Location?      @relation(fields: [locationId], references: [id])
  roleInference RoleInference?

  // Deduplication fields
  dedupeKey            String?
  sourcePriority       Int     @default(20)
  isUnverifiedBoardJob Boolean @default(false)

  // NEW: SEO & filtering fields
  experienceLevel String?  @default("mid") // entry, mid, senior, lead, executive
  employmentType  String?  @default("full-time") // full-time, contract, part-time
  workArrangement String? // remote, hybrid, onsite
  visaSponsorship Boolean  @default(false)
  techStack       String? // JSON array: ["python", "react"]
  industry        String? // engineering, product, design, data
  stateCode       String? // ca, ny, tx

  // Unique constraints
  @@unique([externalId, source], name: "externalId_source")
  @@unique([companyId, dedupeKey], name: "company_dedupeKey")
  // Indexes
  @@index([source])
  @@index([roleSlug])
  @@index([countryCode])
  @@index([isHighSalary])
  @@index([isHundredKLocal])
  @@index([companyId])
  @@index([externalId])
  @@index([remoteMode])
  @@index([currency])
  @@index([isExpired])
  @@index([dedupeKey])
  @@index([experienceLevel])
  @@index([industry])
  @@index([workArrangement])
  @@index([stateCode])
}

model Company {
  id          String  @id @default(cuid())
  name        String
  slug        String  @unique
  website     String?
  logoUrl     String?
  description String?

  // Company meta
  sizeBucket     String?
  tagsJson       String?
  fundingSummary String?
  industry       String?

  // ATS info
  atsProvider String?
  atsUrl      String?
  atsSlug     String?

  // Scraping status
  lastScrapedAt DateTime?
  scrapeStatus  String?
  scrapeError   String?
  jobCount      Int        @default(0)

  // Career-site metrics
  totalJobCount      Int?
  lastJobCountSyncAt DateTime?

  // Location
  countryCode  String?
  headquarters String?

  // NEW: Additional company fields
  employeeCount Int?
  fundingStage  String? // seed, series-a, series-b, public
  foundedYear   Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  jobs    Job[]
  sources CompanySource[]

  @@index([atsProvider])
  @@index([scrapeStatus])
  @@index([sizeBucket])
  @@index([industry])
  @@index([fundingStage])
}

model CompanySource {
  id        String  @id @default(cuid())
  companyId String
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  sourceType  String
  url         String
  atsProvider String?

  isActive      Boolean   @default(true)
  lastScrapedAt DateTime?
  lastJobCount  Int       @default(0)
  scrapeStatus  String?
  scrapeError   String?

  priority Int @default(100)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([companyId, url])
  @@index([atsProvider])
  @@index([isActive])
  @@index([scrapeStatus])
  @@index([priority])
}

model JobSlice {
  id          String @id @default(cuid())
  slug        String @unique
  type        String
  filtersJson String
  jobCount    Int    @default(0)

  title       String?
  description String?
  h1          String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([type])
  @@index([jobCount])
}

model Location {
  id           String   @id @default(cuid())
  locationRaw  String
  city         String?
  citySlug     String?
  region       String?
  countryCode  String?
  isRemote     Boolean? @default(false)
  remoteRegion String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  jobs Job[]
}

model Skill {
  id   String @id @default(cuid())
  name String
  slug String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model RoleInference {
  id       String  @id @default(cuid())
  jobId    String  @unique
  roleSlug String?
  seniority String?
  tagsJson  String?

  job Job @relation(fields: [jobId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ScrapeRun {
  id          String    @id @default(cuid())
  startedAt   DateTime  @default(now())
  completedAt DateTime?

  companiesTotal   Int @default(0)
  companiesScraped Int @default(0)
  companiesFailed  Int @default(0)

  jobsFound   Int @default(0)
  jobsNew     Int @default(0)
  jobsUpdated Int @default(0)
  jobsExpired Int @default(0)

  status   String  @default("running")
  errorLog String?

  triggerType String?

  @@index([status])
  @@index([startedAt])
}